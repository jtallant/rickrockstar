<ul>
  <% if ::Refinery::Businesses::Admin::BusinessesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.businesses_admin_businesses_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_businesses_admin_business_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Businesses::Admin::BusinessesController.sortable? && ::Refinery::Businesses::Business.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Businesses"),
                 refinery.businesses_admin_businesses_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Businesses"),
                 refinery.businesses_admin_businesses_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
