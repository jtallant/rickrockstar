<%= form_for [refinery, :listings_admin, @listing] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @listing,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>

  </div>
  
  <div class='field'>
    <%= f.label :neighborhood -%>
    <%= f.text_field :neighborhood  -%>

  </div>
  
  <div class='field'>
    <%= f.label :price -%>
    <%= f.number_field :price  -%>

  </div>
  
  <div class='field'>
    <%= f.label :mls_no -%>
    <%= f.number_field :mls_no  -%>

  </div>
  
  <div class='field'>
    <%= f.label :square_feet -%>
    <%= f.number_field :square_feet  -%>

  </div>
  
  <div class='field'>
    <%= f.label :bedrooms -%>
    <%= f.number_field :bedrooms  -%>

  </div>
  
  <div class='field'>
    <%= f.label :bathrooms -%>
    <%= f.number_field :bathrooms  -%>

  </div>
  
  <div class='field'>
    <%= f.label :open_house -%>
    <%= f.datetime_select :open_house  -%>

  </div>
  
  <div class='field'>
    <%= f.label :video_tour_url -%>
    <%= f.text_field :video_tour_url  -%>

  </div>
  
  <div class='field'>
    <%= f.label :tagged_features -%>
    <%= f.text_field :tagged_features  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @listing.photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :map -%>
    <%= f.text_field :map  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.listings.admin.listings.listing'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @listing.address) %>
<% end -%>
