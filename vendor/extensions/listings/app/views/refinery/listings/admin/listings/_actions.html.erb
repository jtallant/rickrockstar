<ul>
  <% if ::Refinery::Listings::Admin::ListingsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.listings_admin_listings_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_listings_admin_listing_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Listings::Admin::ListingsController.sortable? && ::Refinery::Listings::Listing.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Listings"),
                 refinery.listings_admin_listings_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Listings"),
                 refinery.listings_admin_listings_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
